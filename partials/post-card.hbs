<article class="post-card {{post_class}}{{#unless feature_image}} no-image{{/unless}}">
    {{#if feature_image}}
        <a class="post-card-image-link" href="{{url}}">
            <div class="post-card-image" style="background-image: url({{feature_image}})">
                <div class="blind">
                    <i class="fa fa-arrow-right" aria-hidden="true"></i>
                </div>
            </div>
        </a>
    {{/if}}
    <div class="post-card-content">
        <header class="post-card-header">
            <h2 class="post-card-title"><a class="post-card-content-link" href="{{url}}">{{title}}</a></h2>
            <div class="entry-meta">
                <span class="post-tag">{{tags}}</span>
                <span class="dot">/</span>
                <span class="post-time">更新于<time datetime="{{date format='YYYY-MM-DD'}}"> {{date format='YYYY-MM-DD'}}</time></span>
                <span class="dot">/</span>
                <span>{{ authors }}</span>
            </div>
        </header>
        <section class="post-card-excerpt">
            <p>{{excerpt words="33"}}</p>
        </section>
        <footer class="post-card-meta">

            <ul class="author-list">
            {{#foreach tags}}
                <li class="author-list-item">
                    <span class="tags-links">
                        <a href="{{url}}">#{{name}}</a>
                    </span>
                </li>
            {{/foreach}}
            </ul>

            <span class="reading-time">
                <a href="{{url}}">READ MORE</a>
            </span>

        </footer>
    </div>
</article>
